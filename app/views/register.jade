extends layout

block content
	.container
		.jumbotron(style="text-align:center;")
			h1= title
			p.lead Register to #{title}
			if error
				.alert.alert-danger #{err}
			p 
				form(action="/register" method="POST")
					.input-title orderId
					input(type="text" name="orderId")
					br
					br
					.input-title companyName
					input(type="text" name="companyName")
					br
					br
					.input-title customerAdress
					input(type="text" name="customerAdress")
					br
					br
					.input-title orderedItem
					input(type="text" name="orderedItem")
					br
					br
					button.btn.btn-default(type="submit" style="width:150px") Ok
					br
					br