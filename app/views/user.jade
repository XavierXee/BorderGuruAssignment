extends layout

block content
	.container
		.jumbotron(style="text-align:center;")
			h1= title
			p.lead user : #{user.login}
			.panel.panel-default
				.panel-body
					.list-group
						h4(class="list-group-item-heading") #{user._id}
						each key, i in keys
							p(class="list-group-item-text") #{key} : #{user[key]}
					.button-group
						button.btn.btn-default(type="button" style="width:150px")
							a(href="/userslist") retour